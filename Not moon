-- 1. Hello Screen (Transparent & Large)
local welcomeGui = Instance.new("ScreenGui")
welcomeGui.Parent = game.CoreGui

local helloText = Instance.new("TextLabel")
helloText.Parent = welcomeGui
helloText.Size = UDim2.new(1, 0, 1, 0)
helloText.BackgroundTransparency = 1 -- Full Transparent
helloText.Text = "Hello"
helloText.TextColor3 = Color3.fromRGB(255, 255, 255)
helloText.TextSize = 120
helloText.Font = Enum.Font.SourceSansBold
helloText.TextStrokeTransparency = 0

task.delay(2, function()
    welcomeGui:Destroy()
end)

-- 2. Variables & Core Logic
local player = game.Players.LocalPlayer
local runService = game:GetService("RunService")
local noclip = false

-- Reset noclip on death
player.CharacterAdded:Connect(function()
    noclip = false
end)

-- Noclip Engine
runService.Stepped:Connect(function()
    if noclip and player.Character then
        for _, v in pairs(player.Character:GetDescendants()) do
            if v:IsA("BasePart") then
                v.CanCollide = false
            end
        end
    end
end)

-- 3. NX2 Main UI
local mainGui = Instance.new("ScreenGui")
mainGui.Name = "NX2_UI"
mainGui.Parent = game.CoreGui
mainGui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Parent = mainGui
frame.Size = UDim2.new(0, 220, 0, 150)
frame.Position = UDim2.new(0.5, -110, 0.5, -75)
frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
frame.Active = true
frame.Draggable = true

local title = Instance.new("TextLabel")
title.Parent = frame
title.Size = UDim2.new(1, 0, 0, 40)
title.Text = "NX2"
title.TextColor3 = Color3.fromRGB(255, 255, 0)
title.TextSize = 25
title.BackgroundTransparency = 1

local statusLabel = Instance.new("TextLabel")
statusLabel.Parent = frame
statusLabel.Position = UDim2.new(0, 0, 0.75, 0)
statusLabel.Size = UDim2.new(1, 0, 0, 30)
statusLabel.Text = "Status: OFF"
statusLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
statusLabel.BackgroundTransparency = 1

local btn = Instance.new("TextButton")
btn.Parent = frame
btn.Size = UDim2.new(0.8, 0, 0.3, 0)
btn.Position = UDim2.new(0.1, 0, 0.4, 0)
btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
btn.Text = "ACTIVATE"
btn.TextColor3 = Color3.fromRGB(255, 255, 255)
btn.TextSize = 20

-- Button Logic
btn.MouseButton1Click:Connect(function()
    noclip = not noclip
    if noclip then
        btn.Text = "STOP"
        statusLabel.Text = "Status: ON (Active)"
        statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    else
        btn.Text = "ACTIVATE"
        statusLabel.Text = "Status: OFF"
        statusLabel.TextColor3 = Color3.fromRGB(255, 0,