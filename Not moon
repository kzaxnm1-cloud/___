â€“ Safe Spots (Orange Corridors)
local safeSpots = {
Vector3.new(0, 8, 0),
Vector3.new(-70, 8, 0),
Vector3.new(70, 8, 0),
Vector3.new(0, 8, -70),
Vector3.new(0, 8, 70),
Vector3.new(-55, 8, -55),
Vector3.new(55, 8, -55),
Vector3.new(-55, 8, 55),
Vector3.new(55, 8, 55),
}

local isAutoWalking = false
local walkConnection = nil

local function getNearestSpot()
if not player.Character or not player.Character:FindFirstChild(â€œHumanoidRootPartâ€) then
return safeSpots[1]
end

```
local playerPos = player.Character.HumanoidRootPart.Position
local nearest = safeSpots[1]
local minDistance = 999999

for _, spot in ipairs(safeSpots) do
    local distance = (playerPos - spot).Magnitude
    if distance < minDistance then
        minDistance = distance
        nearest = spot
    end
end

return nearest
```

end

local function startAutoWalk()
if isAutoWalking then return end
isAutoWalking = true
autoWalkBtn.Text = â€œğŸƒ Auto Walk: ONâ€
autoWalkBtn.BackgroundColor3 = Color3.fromRGB(40, 150, 40)

```
game.StarterGui:SetCore("SendNotification", {
    Title = "NX2!";
    Text = "Auto Walk Started!";
    Duration = 2;
})

local currentTarget = getNearestSpot()

walkConnection = RunService.Heartbeat:Connect(function()
    pcall(function()
        if not isAutoWalking then return end
        
        local character = player.Character
        if not character or not character:FindFirstChild("Humanoid") or not character:FindFirstChild("HumanoidRootPart") then
            return
        end
        
        local humanoid = character.Humanoid
        local hrp = character.HumanoidRootPart
        
        -- Calculate horizontal distance
        local horizontalDist = Vector3.new(
            hrp.Position.X - currentTarget.X,
            0,
            hrp.Position.Z - currentTarget.Z
        ).Magnitude
        
        -- Find new target if close
        if horizontalDist < 12 then
            currentTarget = getNearestSpot()
        end
        
        -- Walk to target (same Y level to walk naturally)
        local walkTarget = Vector3.new(currentTarget.X, hrp.Position.Y, currentTarget.Z)
        humanoid:MoveTo(walkTarget)
    end)
end)
```

end

local function stopAutoWalk()
isAutoWalking = false
autoWalkBtn.Text = â€œğŸƒ Auto Walk: OFFâ€
autoWalkBtn.BackgroundColor3 = Color3.fromRGB(150, 40, 40)

```
if walkConnection then
    walkConnection:Disconnect()
    walkConnection = nil
end

if player.Character and player.Character:FindFirstChild("Humanoid") then
    player.Character.Humanoid:MoveTo(player.Character.HumanoidRootPart.Position)
end
```

end

â€“ Auto Walk Button
