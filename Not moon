local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui", game.CoreGui)
screenGui.ResetOnSpawn = false

-- 1. واجهة البداية (START UI) - مثل الصورة
local startFrame = Instance.new("Frame", screenGui)
startFrame.Size = UDim2.new(0, 220, 0, 150)
startFrame.Position = UDim2.new(0.5, -110, 0.5, -75)
startFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Instance.new("UICorner", startFrame).CornerRadius = UDim.new(0, 10)
local startStroke = Instance.new("UIStroke", startFrame)
startStroke.Color = Color3.fromRGB(0, 170, 255)
startStroke.Thickness = 2

local startTitle = Instance.new("TextLabel", startFrame)
startTitle.Size = UDim2.new(1, 0, 0, 60)
startTitle.Text = "NX2 v1"
startTitle.TextColor3 = Color3.fromRGB(0, 170, 255)
startTitle.TextSize = 24
startTitle.Font = Enum.Font.SourceSansBold
startTitle.BackgroundTransparency = 1

local startBtn = Instance.new("TextButton", startFrame)
startBtn.Size = UDim2.new(0.85, 0, 0.35, 0)
startBtn.Position = UDim2.new(0.075, 0, 0.55, 0)
startBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
startBtn.Text = "START"
startBtn.TextColor3 = Color3.new(1, 1, 1)
startBtn.TextSize = 20
Instance.new("UICorner", startBtn).CornerRadius = UDim.new(0, 8)

-- 2. واجهة التحكم (Main Menu) - الألوان خضراء
local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 220, 0, 280)
mainFrame.Position = UDim2.new(0.5, -110, 0.5, -140)
mainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
mainFrame.Visible = false
mainFrame.Active = true
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 10)
local mainStroke = Instance.new("UIStroke", mainFrame)
mainStroke.Color = Color3.fromRGB(0, 170, 255)
mainStroke.Thickness = 2

local mainTitle = Instance.new("TextLabel", mainFrame)
mainTitle.Size = UDim2.new(1, 0, 0, 40)
mainTitle.Text = "NX2 v1"
mainTitle.TextColor3 = Color3.fromRGB(0, 170, 255)
mainTitle.TextSize = 22
mainTitle.Font = Enum.Font.SourceSansBold
mainTitle.BackgroundTransparency = 1

-- إنشاء الأزرار
local function createBtn(text, pos, color)
    local btn = Instance.new("TextButton", mainFrame)
    btn.Size = UDim2.new(0.85, 0, 0.15, 0)
    btn.Position = pos
    btn.BackgroundColor3 = color
    btn.Text = text
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.TextSize = 14
    btn.Font = Enum.Font.SourceSansBold
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    return btn
end

local forwardBtn = createBtn("Forward VIP ➔", UDim2.new(0.075, 0, 0.2), Color3.fromRGB(0, 180, 0))
local backBtn = createBtn("← Back VIP", UDim2.new(0.075, 0, 0.38), Color3.fromRGB(0, 180, 0))
local zoomBtn = createBtn("ZOOM: OFF", UDim2.new(0.075, 0, 0.56), Color3.fromRGB(100, 100, 100))
local discordBtn = createBtn("نسخ سيرفر ديسكورد", UDim2.new(0.075, 0, 0.74), Color3.fromRGB(88, 101, 242))

-- 3. البرمجة والمنطق
startBtn.MouseButton1Click:Connect(function()
    startFrame.Visible = false
    mainFrame.Visible = true
end)

-- الزوم
local zooming = false
zoomBtn.MouseButton1Click:Connect(function()
    zooming = not zooming
    player.CameraMaxZoomDistance = zooming and 500 or 128
    zoomBtn.Text = zooming and "ZOOM: ON" or "ZOOM: OFF"
end)

-- نسخ الديسكورد
discordBtn.MouseButton1Click:Connect(function()
    setclipboard("https://discord.gg/syPpUv8Jf")
    discordBtn.Text = "تم النسخ!"
    task.wait(2)
    discordBtn.Text = "نسخ سيرفر ديسكورد"
end)

-- الانتقال الآمن (Teleport Logic)
local currentPos = 0 -- لتتبع مرحلة الـ VIP

forwardBtn.MouseButton1Click:Connect(function()
    local char = player.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        -- الانتقال للأمام بمسافة ثابتة (داخل المباني)
        char.HumanoidRootPart.CFrame = char.HumanoidRootPart.CFrame * CFrame.new(0, 0, -110)
        currentPos = currentPos + 1
    end
end)

backBtn.MouseButton1Click:Connect(function()
    local char = player.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        -- يرجع ورا بشرط ما يطلع برا الماب
        if currentPos > 0 then
            char.HumanoidRootPart.CFrame = char.HumanoidRootPart.CFrame * CFrame.new(0, 0, 110)
            currentPos = currentPos - 1
        else
            -- إذا كان عند بيته (أول الماب) ينقله لمكان ثابت آمن
            char.HumanoidRootPart.CFrame = CFrame.new(16, 12, 10) 
        end
    end
end)