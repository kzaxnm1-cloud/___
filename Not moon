local player = game:GetService("Players").LocalPlayer
local cg = game:GetService("CoreGui")
local rs = game:GetService("RunService")
local vu = game:GetService("VirtualUser")

-- تنظيف النسخ القديمة
if cg:FindFirstChild("NX2_ULTIMATE_V1") then cg.NX2_ULTIMATE_V1:Destroy() end

local sg = Instance.new("ScreenGui", cg)
sg.Name = "NX2_ULTIMATE_V1"
sg.ResetOnSpawn = false

-- [ 1. شاشة الدخول (Loader) ] --
local loaderBg = Instance.new("Frame", sg)
loaderBg.Size = UDim2.new(1, 0, 1, 0)
loaderBg.BackgroundColor3 = Color3.new(0, 0, 0)
loaderBg.ZIndex = 100

local loaderMain = Instance.new("ImageLabel", loaderBg)
loaderMain.Size = UDim2.new(0, 280, 0, 300)
loaderMain.Position = UDim2.new(0.5, -140, 0.5, -150)
loaderMain.Image = "rbxassetid://18911065261"
loaderMain.ScaleType = Enum.ScaleType.Stretch
Instance.new("UICorner", loaderMain)

local title = Instance.new("TextLabel", loaderMain)
title.Size = UDim2.new(1, 0, 0.3, 0)
title.Text = "NX2 v1 !"
title.TextColor3 = Color3.fromRGB(255, 255, 0) -- أصفر
title.TextSize = 32
title.Font = Enum.Font.SourceSansBold
title.BackgroundTransparency = 1

local startBtn = Instance.new("TextButton", loaderMain)
startBtn.Size = UDim2.new(0.8, 0, 0, 50)
startBtn.Position = UDim2.new(0.1, 0, 0.75, 0)
startBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
startBtn.Text = "START"
startBtn.TextColor3 = Color3.new(1, 1, 1)
startBtn.TextSize = 25
Instance.new("UICorner", startBtn)

-- [ 2. المنيو الرئيسي ] --
local main = Instance.new("Frame", sg)
main.Size = UDim2.new(0, 250, 0, 420) -- طولنا المنيو للأوامر الجديدة
main.Position = UDim2.new(0.5, -125, 0.5, -210)
main.BackgroundColor3 = Color3.new(0, 0, 0)
main.BackgroundTransparency = 0.3
main.Visible = false
main.Draggable = true
Instance.new("UICorner", main)
Instance.new("UIStroke", main).Color = Color3.new(1, 0, 0)

-- زر الإخفاء (_)
local hideBtn = Instance.new("TextButton", main)
hideBtn.Size = UDim2.new(0, 30, 0, 30)
hideBtn.Position = UDim2.new(1, -35, 0, 5)
hideBtn.Text = "_"
hideBtn.TextColor3 = Color3.new(1, 1, 1)
hideBtn.BackgroundTransparency = 1

-- الأيقونة الدائرية
local mini = Instance.new("ImageButton", sg)
mini.Size = UDim2.new(0, 65, 0, 65)
mini.Position = UDim2.new(0.9, -10, 0.1, 0)
mini.Visible = false
mini.Image = "rbxassetid://18911065261"
Instance.new("UICorner", mini).CornerRadius = UDim.new(1, 0)

-- وظيفة صنع الأزرار
local function createBtn(t, y, c)
    local b = Instance.new("TextButton", main)
    b.Size = UDim2.new(0.9, 0, 0, 35)
    b.Position = UDim2.new(0.05, 0, 0, y)
    b.BackgroundColor3 = c or Color3.fromRGB(45, 45, 45)
    b.TextColor3 = Color3.new(1, 1, 1)
    b.Text = t
    b.TextSize = 16
    b.Font = Enum.Font.SourceSansBold
    Instance.new("UICorner", b)
    return b
end

-- [ 3. الأوامر ] --
local collectBtn = createBtn("Auto Collect: OFF", 70, Color3.fromRGB(0, 120, 0))
local afkBtn = createBtn("AFK Mode: OFF", 115)
local noclipBtn = createBtn("Noclip: OFF", 160)
local zoomBtn = createBtn("Infinite Zoom: OFF", 205)
local discordBtn = createBtn("Join Discord", 250, Color3.fromRGB(88, 101, 242))
local cleanBtn = createBtn("Clean Up UI", 360, Color3.fromRGB(150, 0, 0))

-- [ 4. البرمجة ] --

-- تفعيل التحميل (3.5 ثانية)
startBtn.MouseButton1Click:Connect(function()
    startBtn.Active = false
    for i = 1, 10 do
        startBtn.Text = "Loading" .. string.rep(".", i % 4)
        task.wait(0.35)
    end
    loaderBg:Destroy()
    main.Visible = true
end)

hideBtn.MouseButton1Click:Connect(function() main.Visible = false; mini.Visible = true end)
mini.MouseButton1Click:Connect(function() main.Visible = true; mini.Visible = false end)

-- Auto Collect (تجميع الفلوس من التايكون)
local autoCollect = false
collectBtn.MouseButton1Click:Connect(function()
    autoCollect = not autoCollect
    collectBtn.Text = autoCollect and "Auto Collect: ON" or "Auto Collect: OFF"
    collectBtn.TextColor3 = autoCollect and Color3.new(0, 1, 0) or Color3.new(1, 1, 1)
    
    task.spawn(function()
        while autoCollect do
            -- يبحث عن القطع النقدية أو الأغراض القابلة للتجميع في الماب
            for _, v in pairs(game.Workspace:GetDescendants()) do
                if autoCollect and (v.Name == "Part" or v.Name == "Coin") and v:FindFirstChild("TouchInterest") then
                    firetouchinterest(player.Character.HumanoidRootPart, v, 0)
                    firetouchinterest(player.Character.HumanoidRootPart, v, 1)
                end
            end
            task.wait(0.5)
        end
    end)
end)

-- AFK Mode (منع الطرد)
local afkOn = false
afkBtn.MouseButton1Click:Connect(function()
    afkOn = not afkOn
    afkBtn.Text = afkOn and "AFK Mode: ON" or "AFK Mode: OFF"
    afkBtn.TextColor3 = afkOn and Color3.new(0, 1, 0) or Color3.new(1, 1, 1)
end)

player.Idled:Connect(function()
    if afkOn then
        vu:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
        task.wait(1)
        vu:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
    end
end)

-- باقي الأوامر (Noclip, Zoom, Discord)
local nOn = false
noclipBtn.MouseButton1Click:Connect(function()
    nOn = not nOn
    noclipBtn.Text = nOn and "Noclip: ON" or "Noclip: OFF"
end)

rs.Stepped:Connect(function()
    if nOn and player.Character then
        for _, v in pairs(player.Character:GetDescendants()) do
            if v:IsA("BasePart") then v.CanCollide = false end
        end
    end
end)

zoomBtn.MouseButton1Click:Connect(function()
    player.CameraMaxZoomDistance = (player.CameraMaxZoomDistance == 70) and 500 or 70
    zoomBtn.Text = (player.CameraMaxZoomDistance == 500) and "Infinite Zoom: ON" or "Infinite Zoom: OFF"
end)

discordBtn.MouseButton1Click:Connect(function() setclipboard("https://discord.gg/syPpUv8Jf") end)
cleanBtn.MouseButton1Click:Connect(function() sg:Destroy() end)