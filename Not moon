local player = game:GetService("Players").LocalPlayer
local cg = game:GetService("CoreGui")
local rs = game:GetService("RunService")
local vu = game:GetService("VirtualUser")

-- تنظيف النسخ القديمة
if cg:FindFirstChild("NX2_LEGACY_STYLE") then cg.NX2_LEGACY_STYLE:Destroy() end

local sg = Instance.new("ScreenGui", cg)
sg.Name = "NX2_LEGACY_STYLE"
sg.ResetOnSpawn = false

-- [ 1. شاشة الدخول الاحترافية بالصورة ] --
local loaderFrame = Instance.new("Frame", sg)
loaderFrame.Size = UDim2.new(1, 0, 1, 0)
loaderFrame.BackgroundTransparency = 1
loaderFrame.ZIndex = 100

local loaderMain = Instance.new("ImageLabel", loaderFrame)
loaderMain.Size = UDim2.new(0, 300, 0, 320)
loaderMain.Position = UDim2.new(0.5, -150, 0.5, -160)
loaderMain.Image = "rbxassetid://18911065261" -- صورتك
loaderMain.ScaleType = Enum.ScaleType.Stretch
Instance.new("UICorner", loaderMain)

local title = Instance.new("TextLabel", loaderMain)
title.Size = UDim2.new(1, 0, 0.4, 0)
title.Text = "NX2 v1 !"
title.TextColor3 = Color3.fromRGB(255, 255, 0) -- أصفر
title.TextSize = 40
title.Font = Enum.Font.SourceSansBold
title.BackgroundTransparency = 1

local startBtn = Instance.new("TextButton", loaderMain)
startBtn.Size = UDim2.new(0.8, 0, 0, 55)
startBtn.Position = UDim2.new(0.1, 0, 0.7, 0)
startBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
startBtn.Text = "START"
startBtn.TextColor3 = Color3.new(1, 1, 1)
startBtn.TextSize = 28
Instance.new("UICorner", startBtn)

-- [ 2. المنيو الرئيسي (الشكل القديم الفخم) ] --
local main = Instance.new("Frame", sg)
main.Size = UDim2.new(0, 250, 0, 430)
main.Position = UDim2.new(0.5, -125, 0.5, -215)
main.BackgroundColor3 = Color3.new(0, 0, 0)
main.BackgroundTransparency = 0.2 -- شفافية سوداء فخمة
main.Visible = false
main.Active = true
main.Draggable = true
Instance.new("UICorner", main)
local stroke = Instance.new("UIStroke", main)
stroke.Color = Color3.new(1, 0, 0) -- حواف حمراء
stroke.Thickness = 2

-- صورة شعار داخل المنيو فوق
local logoImg = Instance.new("ImageLabel", main)
logoImg.Size = UDim2.new(0, 60, 0, 60)
logoImg.Position = UDim2.new(0.5, -30, 0, 5)
logoImg.Image = "rbxassetid://18911065261"
logoImg.BackgroundTransparency = 1
Instance.new("UICorner", logoImg).CornerRadius = UDim.new(1,0)

-- زر الإخفاء (_)
local hideBtn = Instance.new("TextButton", main)
hideBtn.Size = UDim2.new(0, 30, 0, 30)
hideBtn.Position = UDim2.new(1, -35, 0, 5)
hideBtn.Text = "_"
hideBtn.TextColor3 = Color3.new(1, 1, 1)
hideBtn.BackgroundTransparency = 1

-- الأيقونة الدائرية (صورتك - مو رصاصية)
local mini = Instance.new("ImageButton", sg)
mini.Size = UDim2.new(0, 75, 0, 75)
mini.Position = UDim2.new(0.9, -15, 0.1, 0)
mini.Visible = false
mini.Image = "rbxassetid://18911065261" -- صورتك الدائرية
Instance.new("UICorner", mini).CornerRadius = UDim.new(1, 0)
local mStroke = Instance.new("UIStroke", mini)
mStroke.Color = Color3.new(1, 0, 0)
mStroke.Thickness = 2

-- وظيفة صنع الأزرار
local function createBtn(t, y, c)
    local b = Instance.new("TextButton", main)
    b.Size = UDim2.new(0.9, 0, 0, 40)
    b.Position = UDim2.new(0.05, 0, 0, y)
    b.BackgroundColor3 = c or Color3.fromRGB(35, 35, 35)
    b.TextColor3 = Color3.new(1, 1, 1)
    b.Text = t
    b.Font = Enum.Font.SourceSansBold
    b.TextSize = 18
    Instance.new("UICorner", b)
    return b
end

-- الأوامر (كلها OFF)
local collectBtn = createBtn("Auto Collect: OFF", 80, Color3.fromRGB(0, 100, 0))
local afkBtn = createBtn("AFK Mode: OFF", 135)
local noclipBtn = createBtn("Noclip: OFF", 190)
local zoomBtn = createBtn("Infinite Zoom: OFF", 245)
local discordBtn = createBtn("Join Discord", 300, Color3.fromRGB(88, 101, 242)) -- ديسكورد صار تحت
local cleanBtn = createBtn("Clean Up UI", 375, Color3.fromRGB(150, 0, 0))

-- [ 3. البرمجة والتحميل ] --

startBtn.MouseButton1Click:Connect(function()
    startBtn.Active = false
    for i = 1, 10 do
        startBtn.Text = "Loading" .. string.rep(".", i % 4)
        task.wait(0.35)
    end
    loaderFrame:Destroy()
    main.Visible = true
end)

hideBtn.MouseButton1Click:Connect(function() main.Visible = false; mini.Visible = true end)
mini.MouseButton1Click:Connect(function() main.Visible = true; mini.Visible = false end)

-- إصلاح تجميع الأغراض (Auto Collect)
local autoCollect = false
collectBtn.MouseButton1Click:Connect(function()
    autoCollect = not autoCollect
    collectBtn.Text = autoCollect and "Auto Collect: ON" or "Auto Collect: OFF"
    collectBtn.TextColor3 = autoCollect and Color3.new(0, 1, 0) or Color3.new(1, 1, 1)
    
    task.spawn(function()
        while autoCollect do
            for _, v in pairs(game.Workspace:GetDescendants()) do
                if autoCollect and v:IsA("BasePart") and (v.Name == "Coin" or v.Name == "Part" or v.Name == "Money") and v:FindFirstChild("TouchInterest") then
                    firetouchinterest(player.Character.HumanoidRootPart, v, 0)
                    firetouchinterest(player.Character.HumanoidRootPart, v, 1)
                end
            end
            task.wait(0.2) -- سرعة تجميع عالية
        end
    end)
end)

-- AFK Mode
local afkOn = false
afkBtn.MouseButton1Click:Connect(function()
    afkOn = not afkOn
    afkBtn.Text = afkOn and "AFK Mode: ON" or "AFK Mode: OFF"
end)
player.Idled:Connect(function()
    if afkOn then vu:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame); task.wait(1); vu:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame) end
end)

-- Noclip & Zoom
local nOn = false
noclipBtn.MouseButton1Click:Connect(function() nOn = not nOn; noclipBtn.Text = nOn and "Noclip: ON" or "Noclip: OFF" end)
rs.Stepped:Connect(function()
    if nOn and player.Character then
        for _, v in pairs(player.Character:GetDescendants()) do if v:IsA("BasePart") then v.CanCollide = false end end
    end
end)

zoomBtn.MouseButton1Click:Connect(function()
    player.CameraMaxZoomDistance = (player.CameraMaxZoomDistance == 70) and 500 or 70
    zoomBtn.Text = (player.CameraMaxZoomDistance == 500) and "Infinite Zoom: ON" or "Infinite Zoom: OFF"
end)

discordBtn.MouseButton1Click:Connect(function() setclipboard("https://discord.gg/syPpUv8Jf") end)
cleanBtn.MouseButton1Click:Connect(function() sg:Destroy() end)