local player = game:GetService("Players").LocalPlayer
local mouse = player:GetMouse()
local rs = game:GetService("RunService")
local cg = game:GetService("CoreGui")
local uis = game:GetService("UserInputService")

-- تنظيف النسخ القديمة
if cg:FindFirstChild("NX2_ULTIMATE_HUB") then cg.NX2_ULTIMATE_HUB:Destroy() end

local sg = Instance.new("ScreenGui", cg)
sg.Name = "NX2_ULTIMATE_HUB"
sg.ResetOnSpawn = false

-- [ 1. شاشة الترحيب (بني - 3 ثواني) ] --
local welcomeFrame = Instance.new("Frame", sg)
welcomeFrame.Size = UDim2.new(1, 0, 1, 0)
welcomeFrame.BackgroundColor3 = Color3.fromRGB(101, 67, 33) -- بني
welcomeFrame.ZIndex = 100

local welcomeText = Instance.new("TextLabel", welcomeFrame)
welcomeText.Size = UDim2.new(1, 0, 0.2, 0)
welcomeText.Position = UDim2.new(0, 0, 0.4, 0)
welcomeText.Text = "Welcome is script NX2"
welcomeText.TextColor3 = Color3.new(1, 1, 1)
welcomeText.TextSize = 40
welcomeText.Font = Enum.Font.SourceSansBold
welcomeText.BackgroundTransparency = 1

local welcomeDisc = Instance.new("TextLabel", welcomeFrame)
welcomeDisc.Size = UDim2.new(1, 0, 0.1, 0)
welcomeDisc.Position = UDim2.new(0, 0, 0.55, 0)
welcomeDisc.Text = "discord = https://discord.gg/syPpUv8Jf"
welcomeDisc.TextColor3 = Color3.new(0.8, 0.8, 0.8)
welcomeDisc.TextSize = 20
welcomeDisc.BackgroundTransparency = 1

-- [ 2. شاشة اختيار اللغة ] --
local langFrame = Instance.new("Frame", sg)
langFrame.Size = UDim2.new(0, 300, 0, 150)
langFrame.Position = UDim2.new(0.5, -150, 0.4, -75)
langFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
langFrame.Visible = false
langFrame.ZIndex = 110
Instance.new("UICorner", langFrame)

local arBtn = Instance.new("TextButton", langFrame)
arBtn.Size = UDim2.new(0.4, 0, 0.4, 0)
arBtn.Position = UDim2.new(0.05, 0, 0.3, 0)
arBtn.Text = "عربي"
arBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
arBtn.TextColor3 = Color3.new(1, 1, 1)

local enBtn = Instance.new("TextButton", langFrame)
enBtn.Size = UDim2.new(0.4, 0, 0.4, 0)
enBtn.Position = UDim2.new(0.55, 0, 0.3, 0)
enBtn.Text = "English"
enBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
enBtn.TextColor3 = Color3.new(1, 1, 1)

-- [ 3. واجهة START ] --
local startFrame = Instance.new("Frame", sg)
startFrame.Size = UDim2.new(0, 250, 0, 150)
startFrame.Position = UDim2.new(0.5, -125, 0.4, -75)
startFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
startFrame.Visible = false
Instance.new("UICorner", startFrame)

local sTitle = Instance.new("TextLabel", startFrame)
sTitle.Size = UDim2.new(1, 0, 0.4, 0)
sTitle.Text = "NX2"
sTitle.TextColor3 = Color3.new(1, 1, 0)
sTitle.TextSize = 35
sTitle.BackgroundTransparency = 1

local startBtn = Instance.new("TextButton", startFrame)
startBtn.Size = UDim2.new(0.8, 0, 0.35, 0)
startBtn.Position = UDim2.new(0.1, 0, 0.5, 0)
startBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 0)
startBtn.Text = "START"
startBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", startBtn)

-- [ 4. القائمة الرئيسية ] --
local main = Instance.new("Frame", sg)
main.Size = UDim2.new(0, 360, 0, 440)
main.Position = UDim2.new(0.5, -180, 0.5, -220)
main.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
main.Visible = false
main.Draggable = true
Instance.new("UICorner", main)

-- [ 5. شريط الإخفاء العلوي ] --
local topBar = Instance.new("Frame", sg)
topBar.Size = UDim2.new(0, 400, 0, 45)
topBar.Position = UDim2.new(0.5, -200, 0, 5)
topBar.BackgroundColor3 = Color3.new(0, 0, 0)
topBar.Visible = false
Instance.new("UICorner", topBar)

local topLabel = Instance.new("TextLabel", topBar)
topLabel.Size = UDim2.new(1, 0, 1, 0)
topLabel.Text = "NX2"
topLabel.TextColor3 = Color3.new(1, 1, 0) -- أصفر
topLabel.TextSize = 25
topLabel.Font = Enum.Font.SourceSansBold
