-- إعداد الفتحات مع تحقق من وجود المجلد
local partsFolder = workspace:FindFirstChild("TsunamiMapParts")
if not partsFolder then
    warn("TsunamiMapParts folder not found! Please create it in Workspace with proper parts.")
    return
end

-- إعداد الشخصية مع تحقق إضافي
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
while not character.Parent do
    task.wait()
end

-- تحقق من المكتبة قبل استخدامها
local success, library = pcall(function()
    return loadstring(game:HttpGet("https://pastebin.com/raw/UZp6G1QU"))()
end)

if not success then
    warn("Failed to load Delta Library. Check the URL or your connection.")
    return
end