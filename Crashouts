local player = game:GetService("Players").LocalPlayer
local mouse = player:GetMouse()
local rs = game:GetService("RunService")
local cg = game:GetService("CoreGui")

-- حذف أي نسخة قديمة عشان ما يسوي لاق
if cg:FindFirstChild("NX2_Menu") then cg.NX2_Menu:Destroy() end

local screenGui = Instance.new("ScreenGui", cg)
screenGui.Name = "NX2_Menu"
screenGui.ResetOnSpawn = false

-- [ 1. واجهة الدخول START ] --
local startFrame = Instance.new("Frame", screenGui)
startFrame.Size = UDim2.new(0, 220, 0, 150)
startFrame.Position = UDim2.new(0.5, -110, 0.4, -75)
startFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
Instance.new("UICorner", startFrame)

local nx2Label = Instance.new("TextLabel", startFrame)
nx2Label.Size = UDim2.new(1, 0, 0.5, 0)
nx2Label.Text = "NX2"
nx2Label.TextColor3 = Color3.new(1, 1, 0) -- أصفر
nx2Label.TextSize = 35
nx2Label.Font = Enum.Font.SourceSansBold
nx2Label.BackgroundTransparency = 1

local startBtn = Instance.new("TextButton", startFrame)
startBtn.Size = UDim2.new(0.8, 0, 0.3, 0)
startBtn.Position = UDim2.new(0.1, 0, 0.6, 0)
startBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 0) -- أخضر
startBtn.Text = "START"
startBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", startBtn)

-- [ 2. زر النار (FIRE NX2) ] --
local fireBtn = Instance.new("TextButton", screenGui)
fireBtn.Size = UDim2.new(0, 80, 0, 80)
fireBtn.Position = UDim2.new(0.5, -40, 0.5, -40)
fireBtn.BackgroundColor3 = Color3.new(0, 0, 0)
fireBtn.Text = "FIRE\nNX2"
fireBtn.TextColor3 = Color3.new(1, 1, 1)
fireBtn.Font = Enum.Font.SourceSansBold
fireBtn.Visible = false
Instance.new("UICorner", fireBtn).CornerRadius = UDim.new(1, 0)

-- [ 3. القائمة الرئيسية ] --
local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 350, 0, 380)
mainFrame.Position = UDim2.new(0.5, -175, 0.5, -190)
mainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
mainFrame.Visible = false
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame)
Instance.new("UIStroke", mainFrame).Color = Color3.fromRGB(0, 170, 255)

-- الصفحات
local gamePage = Instance.new("Frame", mainFrame)
gamePage.Size = UDim2.new(1, 0, 1, -80)
gamePage.Position = UDim2.new(0, 0, 0, 80)
gamePage.BackgroundTransparency = 1

local charPage = Instance.new("Frame", mainFrame)
charPage.Size = UDim2.new(1, 0, 1, -80)
charPage.Position = UDim2.new(0, 0, 0, 80)
charPage.BackgroundTransparency = 1
charPage.Visible = false

-- أزرار التبديل
local b1 = Instance.new("TextButton", mainFrame)
b1.Size = UDim2.new(0.5, 0, 0, 40)
b1.Position = UDim2.new(0, 0, 0, 40)
b1.Text = "اللعب"
b1.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
b1.TextColor3 = Color3.new(1,1,1)

local b2 = Instance.new("TextButton", mainFrame)
b2.Size = UDim2.new(0.5, 0, 0, 40)
b2.Position = UDim2.new(0.5, 0, 0, 40)
b2.Text = "الشخصية"
b2.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
b2.TextColor3 = Color3.new(1,1,1)

b1.MouseButton1Click:Connect(function() gamePage.Visible = true; charPage.Visible = false end)
b2.MouseButton1Click:Connect(function() gamePage.Visible = false; charPage.Visible = true end)

-- دالة الأزرار
local function createBtn(txt, pos, parent)
    local btn = Instance.new("TextButton", parent)
    btn.Size = UDim2.new(0.9, 0, 0, 35)
    btn.Position = pos
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Text = txt
    Instance.new("UICorner", btn)
    return btn
end

-- الأوامر
local aimBtn = createBtn("Aimbot: OFF", UDim2.new(0.05, 0, 0.05, 0), gamePage)
local espBtn = createBtn("ESP (كشف): OFF", UDim2.new(0.05, 0, 0.2, 0), gamePage)
local speedBtn = createBtn("Speed: 5 (OFF)", UDim2.new(0.05, 0, 0.05, 0), charPage)
local noclipBtn = createBtn("Noclip: OFF", UDim2.new(0.05, 0, 0.2, 0), charPage)

-- [ تشغيل START مع التحميل ] --
startBtn.MouseButton1Click:Connect(function()
    for i = 1, 3 do
        startBtn.Text = "START" .. string.rep(".", i)
        task.wait(0.7)
    end
    startFrame:Destroy()
    mainFrame.Visible = true
end)

-- [ برمجة ESP أخضر واضح ] --
local function addESP(p)
    if p.Character then
        local box = Instance.new("BoxHandleAdornment", screenGui)
        box.Name = p.Name .. "_ESP"
        box.Adornee = p.Character
        box.AlwaysOnTop = true
        box.ZIndex = 5
        box.Size = p.Character:GetExtentsSize()
        box.Color3 = Color3.fromRGB(0, 255, 0) -- أخضر فاقع
        box.Transparency = 0.6
    end
end

espBtn.MouseButton1Click:Connect(function()
    local active = espBtn.Text:find("OFF")
    espBtn.Text = active and "ESP (كشف): ON" or "ESP (كشف): OFF"
    if not active then
        for _, v in pairs(screenGui:GetChildren()) do if v.Name:find("_ESP") then v:Destroy() end end
    end
end)

rs.RenderStepped:Connect(function()
    if espBtn.Text:find("ON") then
        for _, p in pairs(game.Players:GetPlayers()) do
            if p ~= player and p.Character and not screenGui:FindFirstChild(p.Name .. "_ESP") then
                addESP(p)
            end
        end
    end
end)

-- [ برمجة الأيم بوت ] --
aimBtn.MouseButton1Click:Connect(function()
    local active = aimBtn.Text:find("OFF")
    aimBtn.Text = active and "Aimbot: ON" or "Aimbot: OFF"
    fireBtn.Visible = active
end)

-- [ برمجة السرعة الآمنة (ضد الباند) ] --
local speedOn = false
speedBtn.MouseButton1Click:Connect(function()
    speedOn = not speedOn
    speedBtn.Text = speedOn and "Speed: 5 (ON)" or "Speed: 5 (OFF)"
end)

rs.Heartbeat:Connect(function()
    if speedOn and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        local hrp = player.Character.HumanoidRootPart
        local hum = player.Character.Humanoid
        if hum.MoveDirection.Magnitude > 0 then
            hrp.CFrame = hrp.CFrame + (hum.MoveDirection * 0.5) -- مشي فيزيائي آمن
        end
    end
end)