local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local mouse = player:GetMouse() -- ربط الماوس للاستخدام مع الزر الإضافي

-- المواقع المحددة
local safePoints = {
    Vector3.new(100, 5, 100), -- الفتحة الأولى
    Vector3.new(200, 5, 200) -- الفتحة الثانية
}
local startPoint = character.PrimaryPart.Position -- الموقع الأصلي (البداية)

-- الحالة الحالية
local currentIndex = 0 -- الموقع الحالي (0 يعني البداية)

-- دالة التحرك بين الفتحات
local function moveToPosition(index)
    if index == 0 then
        humanoid:MoveTo(startPoint) -- النقطة الأصلية
    elseif index > 0 and index <= #safePoints then
        humanoid:MoveTo(safePoints[index]) -- الفتحات الآمنة
    end
    currentIndex = index -- تحديث الموقع الحالي
end

-- جزء التحكم في الفتحات بالأزرار
local userInputService = game:GetService("UserInputService")

userInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end

    if input.KeyCode == Enum.KeyCode.E then
        -- زر "E" للتحرك للأمام
        if currentIndex < #safePoints then
            moveToPosition(currentIndex + 1) -- التقدم إلى النقطة التالية
        end
    elseif input.KeyCode == Enum